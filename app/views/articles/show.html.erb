<div class="border border-gray-400 rounded shadow-lg p-5 w-1/2 mx-auto my-20">
  <div class="px-6 py-4">
    <p class="block font-bold text-3xl mb-5"><%= @article.title %> </p>
    <%= simple_format(@article.description, class: "text-gray-700 text-sm" )%>
  </div>
  <div class="px-6 py-4">
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn-edit' %>
    <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn-destroy' %>
    <%= link_to 'Go to Articles List', articles_path, class: 'btn-info' %>
  </div>
</div>


