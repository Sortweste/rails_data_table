<div class="w-full">
  <div class="col-sm-12">
    <%= form_with(model: article, local: true) do |form| %>


      <div class="form-group row">

        <div class="control-label col-sm-2">
          <%= form.label :title %>
        </div>

        <div class="col-md-10">
          <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
        </div>

      </div>

      <div class="form-group row">

        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>

        <div class="col-md-10">
          <%= form.text_area :description, class: "form-control", placeholder: "Description", rows: 10 %>
        </div>

      </div>

      <div class="form-group row">
        <div class="col-md-10">
          <%= form.submit class: 'btn-info' %>
        </div>
      </div>

    <% end %>
  </div>
</div>